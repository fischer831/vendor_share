<!-- Validation failure messages -->

<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Review #<%= @review.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_review/<%= @review.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for vendor_id -->
          <div class="form-group">
            <label for="vendor_id" class="col-sm-2 control-label">
              Vendor
            </label>
            <div class="col-sm-10">
              <input type="text" id="vendor_id" name="vendor_id" placeholder="Vendor" class="form-control" value="<%= @review.vendor_id %>">
            </div>
          </div>

          <!-- Label and input for review -->
          <div class="form-group">
            <label for="review" class="col-sm-2 control-label">
              Review
            </label>
            <div class="col-sm-10">
              <input type="text" id="review" name="review" placeholder="Review" class="form-control" value="<%= @review.review %>">
            </div>
          </div>

          <!-- Label and input for rating -->
          <div class="form-group">
            <label for="rating" class="col-sm-2 control-label">
              Rating
            </label>
            <div class="col-sm-10">
              <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @review.rating %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @review.user_id %>">
            </div>
          </div>

          <!-- Label and input for project_name -->
          <div class="form-group">
            <label for="project_name" class="col-sm-2 control-label">
              Project name
            </label>
            <div class="col-sm-10">
              <input type="text" id="project_name" name="project_name" placeholder="Project name" class="form-control" value="<%= @review.project_name %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Review
              </button>
              or
              <a href="/reviews/<%= @review.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
