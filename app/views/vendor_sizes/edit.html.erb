<!-- Validation failure messages -->

<% if @vendor_size.errors.any? %>
  <% @vendor_size.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Vendor Size #<%= @vendor_size.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_vendor_size/<%= @vendor_size.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for vendor_size -->
          <div class="form-group">
            <label for="vendor_size" class="col-sm-2 control-label">
              Vendor size
            </label>
            <div class="col-sm-10">
              <input type="text" id="vendor_size" name="vendor_size" placeholder="Vendor size" class="form-control" value="<%= @vendor_size.vendor_size %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Vendor Size
              </button>
              or
              <a href="/vendor_sizes/<%= @vendor_size.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
